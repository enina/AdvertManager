<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:flow="http://www.springframework.org/schema/webflow-config"
       xmlns:jms="http://www.springframework.org/schema/jms"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:lang="http://www.springframework.org/schema/lang"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
          http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.0.RELEASE.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.0.RELEASE.xsd
          http://www.springframework.org/schema/webflow-config http://www.springframework.org/schema/webflow-config/spring-webflow-config-2.0.xsd
          http://www.springframework.org/schema/jms http://www.springframework.org/schema/jms/spring-jms-3.1.0.RELEASE.xsd
          http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.1.0.RELEASE.xsd
          http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang-3.1.0.RELEASE.xsd
          http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi-3.1.0.RELEASE.xsd
          http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.1.0.RELEASE.xsd
          http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.0.RELEASE.xsd">
              
              

    <bean id="config" class="org.springframework.beans.factory.config.PropertyOverrideConfigurer">
        <property name="ignoreInvalidKeys" value="true"/>
        <property name="ignoreResourceNotFound" value="true" />
        <property name="locations" />
    </bean>
  
    <context:property-override  
                ignoreInvalidKeys="true" 
                ignoreResourceNotFound="true"
                location="file:/WEB-INF/conf/advertmanager.properties"/>

    <bean id="advertManagerC3P0DataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="driverClass" value="com.oracle.jdbc.driver"/>
        <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/mysql"/>
        <property name="user" value="admin"/>
        <property name="password" value="admin1234"/>
    </bean>

    <bean id="advertManagerSessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="advertManagerC3P0DataSource"/>
        <property name="configLocation" value="file:/WEB-INF/conf/hibernate.cfg.xml" />"/>
        <property name="hibernateProperties">
            <value>
                hibernate.dialect=org.hibernate.dialect.MySQLInnoDBDialect
                hibernate.show_sql=true
            </props>
        </property>
    </bean>
    
    
    <bean id="abstractDao" class="com.mne.advertmanager.dao.GenericDaoHibernateImpl" abstract="true">
        <property name="sessionFactory">
            <ref bean="advertManagerSessionFactory"/>
        </property>
    </bean>
    
    <bean id="advertManagerProductDao" parent="abstractDao" class="com.mne.advertmanager.dao.ProductDaoImpl"/>
    
    <bean id="advertManagerProductService" class="com.mne.advertmanager.service.ProductService">
        <property name="productDao" ref="advertManagerProductDao"/>
    </bean>
    
    <bean id="advertManagerTxManager" class="org.springframework.transaction.jta.JtaTransactionManager"/>
    
    <tx:annotation-driven/>
</beans>
