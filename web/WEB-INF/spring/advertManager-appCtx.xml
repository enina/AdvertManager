    <task:scheduled-tasks scheduler="admanScheduler">
        <task:scheduled ref="poAggrService" method="calculateAggrData" cron="0 0 4 * * ?"/>
    </task:scheduled-tasks>
    -->
<!-- Scheduling related beans-->    


</beans>
