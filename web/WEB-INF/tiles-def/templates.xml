<tiles-definitions>

    <!-- Default Main Template -->
    <definition name=".mainTemplate" template="/WEB-INF/view/common/main.jsp">
        <put-attribute name="title" value="AdMan" type="string" />
        <put-attribute name="header" value="/WEB-INF/view/common/menu.jsp" />
        <put-attribute name="menu" value="/WEB-INF/view/common/blank.jsp" />
        <put-attribute name="content" value="/WEB-INF/view/common/blank.jsp" />        
        <put-attribute name="footer" value="/WEB-INF/view/common/menu.jsp" />
    </definition>
    
   
   <definition name="home" extends=".mainTemplate">
       <put-attribute name="content" value="/WEB-INF/view/home.jsp" />
   </definition>
   
   <definition name="affiliates/list" extends=".mainTemplate">
       <put-attribute name="title" value="Affiliates" type="string" />
       <put-attribute name="content" value="/WEB-INF/view/affiliates/list.jsp" />
   </definition>

   <definition name="affiliates/new" extends=".mainTemplate">
       <put-attribute name="title" value="Affiliate Registration" type="string" />
       <put-attribute name="content" value="/WEB-INF/view/affiliates/new.jsp" />
   </definition>

   <definition name="products/list" extends=".mainTemplate">
       <put-attribute name="title" value="Products" type="string" />
       <put-attribute name="content" value="/WEB-INF/view/products/list.jsp" />
   </definition>
 
   <!--for gui we defined template that not extends main, meas that it gust go to the jsp page -->
   <definition name="apps/parsergen" template="/WEB-INF/view/apps/parsergen.jsp"/>
   
   <definition name="login" template="/index.jsp"/>

